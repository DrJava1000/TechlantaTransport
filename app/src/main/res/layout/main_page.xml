<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_page_layout"
    android:layout_width="1080px"
    android:layout_height="2280px"
    android:background="@drawable/main_page_network_background">

    <ImageButton
        android:id="@+id/settings_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_button"
        android:backgroundTint="#ccd0d3"
        android:scaleType="fitCenter"
        android:translationX="230dp"
        android:translationY="665dp"
        app:srcCompat="@drawable/settings_icon" />

    <ImageButton
        android:id="@+id/shopping_cart_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_button"
        android:backgroundTint="#ccd0d3"
        android:scaleType="fitCenter"
        android:translationX="50dp"
        android:translationY="220dp"
        app:srcCompat="@drawable/shopping_cart_icon" />

    <ImageButton
        android:id="@+id/traffic_light_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_button"
        android:backgroundTint="#ccd0d3"
        android:scaleType="fitCenter"
        android:translationX="120dp"
        android:translationY="110dp"
        app:srcCompat="@drawable/traffic_light_icon" />

    <ImageButton
        android:id="@+id/emergency_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_button"
        android:backgroundTint="#ccd0d3"
        android:scaleType="fitCenter"
        android:translationX="225dp"
        android:translationY="450dp"
        app:srcCompat="@drawable/emergency_icon" />

</RelativeLayout>